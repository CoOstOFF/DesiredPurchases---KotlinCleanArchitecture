<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wishListCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="@color/transparent"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="@dimen/list_image_size"
            android:layout_height="@dimen/list_image_size"
            android:contentDescription="@string/content_description_empty"
            android:src="@drawable/ic_launcher_background"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/choiceCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            card_view:layout_constraintBottom_toBottomOf="@+id/productImage"
            card_view:layout_constraintEnd_toEndOf="@+id/productImage"
            card_view:layout_constraintHorizontal_bias="2.35"
            card_view:layout_constraintStart_toStartOf="@+id/productImage"
            card_view:layout_constraintTop_toTopOf="@+id/productImage"
            card_view:layout_constraintVertical_bias="2.35"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@id/maxPurchasePrice"
            card_view:layout_constraintHorizontal_bias="0"
            card_view:layout_constraintStart_toEndOf="@+id/productImage"
            card_view:layout_constraintTop_toTopOf="@+id/productImage"
            card_view:layout_constraintVertical_bias="0"
            tools:text="Title" />

        <TextView
            android:id="@+id/currentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:singleLine="false"
            android:textColor="@color/colorTextNeutral"
            android:textSize="@dimen/subtitle_text_size"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@id/maxPurchasePrice"
            card_view:layout_constraintHorizontal_bias="0"
            card_view:layout_constraintStart_toEndOf="@+id/productImage"
            card_view:layout_constraintTop_toBottomOf="@id/title"
            card_view:layout_constraintVertical_bias="0"
            tools:text="Subtitle" />

        <TextView
            android:id="@+id/maxPurchasePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="4dp"
            android:singleLine="true"
            android:textColor="@color/colorTextNeutral"
            android:textSize="@dimen/subtitle_text_size"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="maxPurchasePrice" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Used for the ripple effect on touch -->
    <LinearLayout
        android:id="@+id/movieHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_effect"
        android:orientation="horizontal" />

</androidx.cardview.widget.CardView>